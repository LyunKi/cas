{
  "schema": "./src/schema.gql",
  "generates": {
    "./src/generated/schema.d.ts": {
      "config": {
        "useIndexSignature": true,
        "contextType": "../context#Context",
        "scalars": {
          "DateTime": "Date"
        }
      },
      "plugins": ["typescript", "typescript-resolvers"]
    }
  }
}
