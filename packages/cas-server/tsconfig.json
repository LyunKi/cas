{
  "extends": "@cloud-dragon/tsconfig-node",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": ".",
    "target": "ESNext",
    "noImplicitAny": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@cas-server/*": ["./src/*"]
    }
  },
  "include": ["src", "tests", "config/jest"]
}
